@model Services.Models.CreateManagerRequest

@{
    ViewData["Title"] = "Create";
}

<head>
    <link href="~/css/nlb.css" rel="stylesheet" />
</head>

<h1>Create</h1>

<h4>Manager</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ManagerName" class="control-label"></label>
                <input asp-for="ManagerName" class="form-control" autocomplete="off"/>
                <span asp-validation-for="ManagerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="button" />
                <button class="button"><a asp-action="Index">Back to List</a></button>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

